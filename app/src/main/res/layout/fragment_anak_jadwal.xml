<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aswanabidin.penjadwalanmandiri.Fragments.AnakJadwalFragment">

    <!-- item recylerview -->
    <RelativeLayout
        android:id="@+id/reclcyerViewJadwal"
        android:layout_width="wrap_content"
        android:layout_height="440dp"
        android:layout_marginBottom="110dp">

        <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/listJadwalAnakOrtu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appbarlayout"
            android:layout_marginBottom="30dp"></android.support.v7.widget.RecyclerView>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:indeterminate="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_above="@+id/reclcyerViewJadwal"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPutih"
        android:gravity="bottom"
        android:padding="10dp">

        <Button
            android:id="@+id/btnTambahJadwal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_rounded_corners"
            android:text="Tambah Jadwal"
            android:textAllCaps="false"
            android:textColor="@color/colorPutih" />

        <Button
            android:id="@+id/btnJadwalSelesai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btnTambahJadwal"
            android:layout_marginTop="10dp"
            android:background="@drawable/stroke_rounded"
            android:text="Selesai"
            android:textAllCaps="false"
            android:textColor="@color/colorPinkSmooth" />


    </RelativeLayout>

</RelativeLayout>
