<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_tambahhadiahanakortu"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <ImageView
            android:id="@+id/imgprofilhadiah"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_account_circle" />

        <TextView
            android:id="@+id/tvNamaHadiah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/imgprofilhadiah"
            android:text="Nama Hadiah"
            android:textColor="@color/colorPinkSmooth"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tvPoinHadiah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNamaHadiah"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgprofilhadiah"
            android:text="100"
            android:textColor="@color/colorGrayText"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNamaHadiah"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tvPoinHadiah"
            android:text="Poin"
            android:textColor="@color/colorGrayText"
            android:textSize="14sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>