<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aswanabidin.penjadwalanmandiri.HalamanDetailProfilAnakOrtu">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left">

                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profil Anak"
                    android:textColor="@color/colorPutih"
                    android:textSize="18sp" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbarlayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imganakprofil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_account_circle" />

            <TextView
                android:id="@+id/tvnamaanakprofil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imganakprofil"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Nama Anak" />

            <TextView
                android:id="@+id/tvalamatemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvnamaanakprofil"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:text="Alamat Email"
                android:textSize="14sp" />

            <View
                android:id="@+id/garisnamakegiatan"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvalamatemail"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tvatau"
                android:background="@color/colorGrayText" />

            <TextView
                android:id="@+id/tvtempatlahiranakprofil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/garisnamakegiatan"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="10dp"
                android:text="Tempat Lahir"
                android:textSize="14sp" />

            <View
                android:id="@+id/garistglkegiatan"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvtempatlahiranakprofil"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tvatau"
                android:background="@color/colorGrayText" />

            <TextView
                android:id="@+id/tvtgllahiranakprofil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/garistglkegiatan"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_date"
                android:drawablePadding="10dp"
                android:text="Tanggal Lahir"
                android:textSize="14sp" />

            <View
                android:id="@+id/gariswaktukegiatan"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvtgllahiranakprofil"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tvatau"
                android:background="@color/colorGrayText" />

            <TextView
                android:id="@+id/tvusernameanakprofil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gariswaktukegiatan"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_account"
                android:drawablePadding="10dp"
                android:text="Username"
                android:textSize="14sp" />

            <View
                android:id="@+id/garispoinkegiatan"
                style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvusernameanakprofil"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tvatau"
                android:background="@color/colorGrayText" />

            <Button
                android:id="@+id/btnEditAkunAnak"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tvusernameanakprofil"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/stroke_rounded"
                android:text="Edit Akun Anak"
                android:textAllCaps="false"
                android:textColor="@color/colorPinkSmooth"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnHapusAkunAnak"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/btnEditAkunAnak"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_rounded_corners"
                android:text="Hapus Akun Anak"
                android:textAllCaps="false"
                android:textColor="@color/colorPutih"
                android:textSize="14sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
