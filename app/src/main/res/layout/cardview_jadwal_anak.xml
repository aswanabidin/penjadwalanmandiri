<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_selesaijadwalanak"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgprofilanakJadwal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_account_circle" />

        <TextView
            android:id="@+id/tvNamaAnakJadwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/imgprofilanakJadwal"
            android:text="Nama Anak"
            android:textColor="@color/colorPinkSmooth"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTanggalJadwal"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/tvNamaAnakJadwal"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="Tanggal"
            android:textColor="@color/colorGrayText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvNamaKegiatanJadwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNamaAnakJadwal"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgprofilanakJadwal"
            android:text="Kegiatan"
            android:textColor="@color/colorGray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvWaktuJadwal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNamaAnakJadwal"
            android:layout_toLeftOf="@+id/lrlinevertical"
            android:layout_toRightOf="@+id/tvNamaKegiatanJadwal"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="Waktu"
            android:textColor="@color/colorGrayText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvPoinJadwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNamaKegiatanJadwal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imgprofilanakJadwal"
            android:text="100"
            android:textColor="@color/colorGrayText"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNamaKegiatanJadwal"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tvPoinJadwal"
            android:text="Poin"
            android:textColor="@color/colorGrayText"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/lrlinevertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/tvTanggalJadwal"
            android:orientation="vertical">

            <View
                android:layout_width="0.3dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorGrayText" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/lrlinevertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:src="@drawable/ic_ceklist" />

        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>