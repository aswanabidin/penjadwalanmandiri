<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <ImageView
            android:id="@+id/imgprofilAnak"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_account_circle" />

        <TextView
            android:id="@+id/tvNamaAnak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/imgprofilAnak"
            android:text="Nama Anak"
            android:textColor="@color/colorPinkSmooth"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTanggalLahirAnak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNamaAnak"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgprofilAnak"
            android:text="Tempat dan Tanggal lahir"
            android:textColor="@color/colorGrayText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvUsernameAnak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTanggalLahirAnak"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgprofilAnak"
            android:text="Username"
            android:textColor="@color/colorGrayText"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tvPoinAnak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUsernameAnak"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgprofilAnak"
            android:text="100"
            android:textColor="@color/colorGrayText"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUsernameAnak"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tvPoinAnak"
            android:text="Poin"
            android:textColor="@color/colorGrayText"
            android:textSize="14sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>